</div>
<!-- Modal Img-->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <form
      action="/upload-profile"
      enctype="multipart/form-data"
      method="post"
      class="modal-content"
    >
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          Change Profile Image
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div
        class="px-4 modal-body d-flex justify-content-between align-items-center"
      >
        <label for="inputFile" class="btn btn-secondary">
          <i class="bi bi-plus"></i>
          Upload Image
        </label>
        <input type="file" name="avatar" id="inputFile" style="display: none" />
        <img id="profileImg" src="<%= user.profileImg ? user.profileImg :
        "../img/avatar.png" %>" alt="" width=" 150px" ; height=" 150px"
        style="border-radius: 50%;" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
          Close
        </button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>
    </form>
  </div>
</div>
<div class="b-example-divider b-example-vr"></div>

<!-- Modal Delete -->

<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          Confirm Account Deletion
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete your account?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button id="confirmDeleteBtn" class="btn btn-danger">
          Delete Account
        </button>
      </div>
    </div>
  </div>
</div>
<script>
  // Assign elements safely
  const inputFile = document.getElementById("inputFile");
  const profileImg = document.getElementById("profileImg");

  // Preview uploaded profile image
  inputFile?.addEventListener("change", (eo) => {
    if (eo.target.files.length > 0) {
      profileImg.src = URL.createObjectURL(eo.target.files[0]);
    }
  });

  // Handle account deletion
  document
    .getElementById("confirmDeleteBtn")
    .addEventListener("click", async () => {
      try {
        const response = await fetch("/delete-account", {
          method: "DELETE",
          credentials: "same-origin",
        });

        const result = await response.json();

        if (result.success) {
          // Replace alert with redirect only
          window.location.href = "/";
        } else {
          console.error("Failed to delete account.");
          // Optionally show a message in the UI instead
        }
      } catch (error) {
        console.error("Error deleting account:", error);
        // Optionally show a message in the UI instead
      }
    });
</script>
