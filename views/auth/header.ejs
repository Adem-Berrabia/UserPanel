<header class="mb-auto">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="float-md-start mb-0">
      <a href="/" class="btn fs-2 text-white fw-bold">UserPanel</a>
    </h3>

    <% if (user) { %>
    <div class="d-flex align-items-center">
      <p class="m-0 me-2">Welcome : <%= user.email %></p>
      <a class="fw-bold btn btn-light" href="/signout">Sign out</a>
    </div>
    <% } else { %>
    <nav class="nav nav-masthead justify-content-center float-md-end">
      <a
        class="fw-bold btn me-2 <%= currentPage === 'login' ? 'btn-light text-dark' : 'text-white' %>"
        href="/login"
      >
        Log in
      </a>
      <a
        class="fw-bold btn <%= currentPage === 'signup' ? 'btn-light text-dark' : 'text-white' %>"
        href="/signup"
      >
        Sign up
      </a>
    </nav>
    <% } %>
  </div>
</header>
